pipeline {
    agent any

    environment {
        SSH_CRED    = 'node-app-key'
        SERVER_IP   = '3.108.219.106'
        REMOTE_USER = 'ubuntu'
        APP_DIR     = '/home/ubuntu/pythonapp'
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent([env.SSH_CRED]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no $REMOTE_USER@$SERVER_IP "mkdir -p $APP_DIR"
                        scp -o StrictHostKeyChecking=no -r * $REMOTE_USER@$SERVER_IP:$APP_DIR/
                    '''
                }
            }
        }

        stage('Install & Run Application') {
            steps {
                sshagent([env.SSH_CRED]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no $REMOTE_USER@$SERVER_IP << 'EOF'
                        sudo apt update -y
                        sudo apt install -y python3-venv python3-pip
                        cd /home/ubuntu/pythonapp
                        python3 -m venv venv
                        source venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                        nohup python3 app.py > app.log 2>&1 &
                        EOF
                    '''
                }
            }
        }
    }

    post {
        success {
            echo " Deployment Successful!"
        }
        failure {
            echo " Deployment Failed!"
        }
    }
}
