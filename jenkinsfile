pipeline {
    agent any

    environment {
        SERVER_IP = "3.108.219.106"
        APP_DIR = "/home/ubuntu/jarvisweb"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Deploy Files') {
            steps {
                sshagent(['node-app-key']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@$SERVER_IP "rm -rf $APP_DIR && mkdir -p $APP_DIR"
                    scp -o StrictHostKeyChecking=no -r . ubuntu@$SERVER_IP:$APP_DIR
                    '''
                }
            }
        }

        stage('Install Dependencies & Run App') {
            steps {
                sshagent(['node-app-key']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ubuntu@$SERVER_IP << 'EOF'
                        cd $APP_DIR
                        sudo apt update
                        sudo apt install -y python3-venv python3-pip

                        python3 -m venv venv
                        source venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt

                        pkill -f app.py || true
                        nohup python3 app.py > app.log 2>&1 &
                    EOF
                    """
                }
            }
        }
    }
}
