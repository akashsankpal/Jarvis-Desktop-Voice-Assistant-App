pipeline {
    agent any

    environment {
        SSH_CRED    = 'node-app-key'
        SERVER_IP   = '3.108.219.106'
        REMOTE_USER = 'ubuntu'
        APP_DIR     = '/home/ubuntu/pythonapp'
        REPO_DIR    = 'Jarvis-Desktop-Voice-Assistant-App' // <-- relative repo folder after git clone
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/akashsankpal/Jarvis-Desktop-Voice-Assistant-App', branch: 'main'
            }
        }

        stage('Deploy to Server') {
    steps {
        sshagent(credentials: ["${SSH_CRED}"]) {
            sh """
                ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} 'mkdir -p ${APP_DIR}'
                scp -o StrictHostKeyChecking=no -r * ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
            """
        }
    }
}


        stage('Install & Run Application') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} << 'EOF'
                        sudo apt update -y
                        sudo apt install -y python3-venv python3-pip
                        cd ${APP_DIR}
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                        nohup python3 app.py --host=0.0.0.0 > app.log 2>&1 &
                        EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Deployment Failed!"
        }
    }
}
