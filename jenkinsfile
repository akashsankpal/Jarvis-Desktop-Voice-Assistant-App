pipeline {
    agent any

    environment {
        SSH_CRED    = 'node-app-key'
        SERVER_IP   = '3.108.219.106'
        REMOTE_USER = 'ubuntu'
        APP_DIR     = '/home/ubuntu/jarvisweb'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/akashsankpal/Jarvis-Desktop-Voice-Assistant-App', branch: 'main'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} 'rm -rf ${APP_DIR} && mkdir -p ${APP_DIR}'
                    scp -o StrictHostKeyChecking=no -r * ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                    """
                }
            }
        }

        stage('Run Flask App') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} << EOF
                    sudo apt update -y
                    sudo apt install -y python3-venv python3-pip
                    cd ${APP_DIR}
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r requirements.txt
                    pkill -f app.py || true
                    nohup python3 app.py > app.log 2>&1 &
                    EOF
                    """
                }
            }
        }
    }
}
